<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.martin.brobotgui" >

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_brobot"
        android:label="brobotgui"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SetupActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.example.martin.brobotgui.MainActivity">
            <intent-filer>
                <action android:name="com.example.martin.brobotgui.SETUPACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filer>
        </activity>
    </application>

</manifest>
